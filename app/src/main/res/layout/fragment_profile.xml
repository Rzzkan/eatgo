<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".fragment.account.ProfileFragment">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/update_pw_title"
        android:textColor="@color/grey"
        android:textSize="@dimen/heading_1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnChangeProfile"
        style="@style/Button_Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvTitle"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:text="Update Profile" />

    <Button
        android:id="@+id/btnChangeRestaurant"
        style="@style/Button_Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChangePassword"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_store_24"
        android:text="Update Restaurant"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnChangePassword"
        style="@style/Button_Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChangeProfile"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:text="Update Password" />

    <Button
        android:id="@+id/btnMenu"
        style="@style/Button_Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChangeRestaurant"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_content_paste_24"
        android:text="Update Menu"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Logout" />
</RelativeLayout>